<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="us.zolp.view.RootLayoutController">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <Label text="ZIP Code" />
            <TextField fx:id="zipField" prefHeight="25.0" prefWidth="74.0" />
            <Label text="Starting Date" />
            <DatePicker fx:id="startPicker" prefHeight="25.0" prefWidth="129.0" />
            <Label text="Days" />
            <ChoiceBox fx:id="daysChoice" prefHeight="25.0" prefWidth="64.0" />
            <Label text="Unit" />
            <ChoiceBox fx:id="unitChoice" prefHeight="25.0" prefWidth="84.0" />
            <Label text="Format" />
            <ChoiceBox fx:id="formatChoice" prefHeight="25.0" prefWidth="100.0" />
          <Button fx:id="goButton" mnemonicParsing="false" onAction="#handleGo" text="Go" />
        </items>
      </ToolBar>
   </top>
</BorderPane>
